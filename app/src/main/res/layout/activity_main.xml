<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.wits.firebaseapptest.MainActivity">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"
            android:id="@+id/editName" android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:padding="5dp" android:textSize="18sp"
            android:hint="Enter Name"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_below="@+id/editName" android:id="@+id/spinnerGenres" android:entries="@array/genres"/>
    <Button
            android:text="Add Game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_below="@+id/spinnerGenres" android:id="@+id/buttonAdd"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentStart="true"
            android:layout_below="@+id/buttonAdd" android:id="@+id/listViewGames"/>
</RelativeLayout>